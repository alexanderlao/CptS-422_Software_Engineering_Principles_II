package tests;

import net.sf.eclipsecs.sample.checks.MethodLimitCheck;

import static org.junit.Assert.*;
import org.junit.Test;

public class StructuralTests 
{
	// Halstead Volume is the program length (N) times the log2 of the program vocabulary (n) 
    // [1,2] : Volume = N log2 n
	@Test
	public void testVolume()
	{
		MethodLimitCheck m = new MethodLimitCheck();
		
		int programLength = m.getTotalNotUniqueOperator() + m.getTotalNotUniqueOperand();
		int programVocabulary = m.getTotalUniqueOperator() + m.getTotalUniqueOperand();
		double expectedVolume = programLength * (Math.log(programVocabulary)/Math.log(2)));
		
		// (Expected, Value, Getter)
		assertEquals()
	}
	
